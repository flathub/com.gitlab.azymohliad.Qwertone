{
    "app-id": "org.azymohliad.Qwertone",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "qwertone",
    "finish-args" : [
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/qwertone/cargo"
        }
    },
    "modules": [
        {
            "name": "qwertone",
            "buildsystem": "simple",
            "build-commands": [
                "cargo build --release --locked",
                "install -Dm 755 target/release/qwertone -t /app/bin",
                "install -Dm 644 res/org.azymohliad.Qwertone.desktop -t /app/share/applications",
                "install -Dm 644 res/org.azymohliad.Qwertone.appdata.xml -t /app/share/metainfo",
                "install -Dm 644 res/icons/org.azymohliad.Qwertone.svg -t /app/share/icons/hicolor/scalable/apps",
                "install -Dm 644 res/icons/org.azymohliad.Qwertone-symbolic.svg -t /app/share/icons/hicolor/symbolic/apps"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/azymohliad/qwertone.git",
                    "tag": "v0.1.0",
                    "commit": "e63fc76632f4d8488051199772ce2be7cc746d2e"
                },
                "dependencies.json"
            ]
        }
    ]
}
